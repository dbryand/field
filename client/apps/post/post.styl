#post
  background: #fff
  width: 100%
  height: 100%
  border-radius: 3px
  padding: 1em
  margin: 1em
  position: relative

  .post-name
    font-size: 24px
    margin-top: 0
    padding: 5px

  input#post-name-field
    font-size: 24px
    padding: 5px
    font-weight: normal

  .close
    position absolute
    top 0
    right .25em
    font-size 200%
    font-weight normal
    z-index 20
