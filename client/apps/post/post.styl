#post
  background #fff
  height 100em
  padding 4em
  position relative

  .post-name
    font-size 24px
    margin-top 0
    padding 5px

  input#post-name-field
    font-size 24px
    padding 5px
    font-weight normal
    display: block
    width: 100%
    border 0
    &:focus
      outline 0
      border-bottom 1px solid #999

#post-tools
  position relative

.page-close
  color #aaa
