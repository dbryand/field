#field
  position absolute
  width 100%
  height 100%
  overflow hidden
  z-index 0
  background #999

  #field-canvas
    position absolute
    width 2000px
    height 2000px
    z-index 10
    background #f5f5f5 url(/field-bg.png)
    box-shadow 0px 0px 5px rgba(0, 0, 0, .6)
    .field-item
      position absolute
      &.ui-draggable-dragging
        box-shadow 0px 0px 50px rgba(0, 0, 0, .1)
        cursor move

  .name-editable
    position absolute
    top 1em
    left 1em
    font-size 120%
    margin 0
    z-index 20000

  .page-close
    color: #999

  .trash
    position absolute
    bottom .5em
    right 1em
    font-size 150%
    font-weight normal
    color #ccc
    z-index 20

  #create-post
    position absolute
    bottom 1em
    left 1em
    width 40em
    z-index 20
