body
  overflow hidden
  background #333

.noshow
  display none

.page-close
  position absolute
  margin 0
  top 0
  right .5em
  font-size 3em
  line-height 1em
  font-weight normal
  margin 0
  opacity .6
  z-index 100
  color #000
  &:hover
    color #000
    text-decoration none
    cursor pointer
    opacity 1

.can-edit
  cursor cell

a:hover
  cursor pointer
